server {
	listen 80;
	listen [::]:80;

	server_name	canhazip.info www.canhazip.info ipv4.canhazip.info ipv6.canhazip.info;

	root		/var/www/vhosts/canhazip.info/;
	index		index.php;

	access_log	/usr/local/nginx/logs/canhazip.info-access;
	error_log	/usr/local/nginx/logs/canhazip.info-error;

	include php;
	location / {
		allow all;
		rewrite ^/(.*)$ /index.php/$1 last;
	}

	location .git {
		deny all;
	}
}
